@model LoginViewModel

@{
    Layout = "~/Views/Account/_AccountLayout.cshtml";
}

<form asp-action="LoginAsync" asp-controller="Account" class="needs-validation" novalidate>
    <div class="text-center mb-4">
        @*<img class="mb-4" src="/docs/4.5/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
        <h2 class="chatname">SignalR Chat</h2>
    </div>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Login">Name</label>
        <input class="form-control" asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    @*<div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> Remember me
        </label>
    </div>*@
    <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top: 2em;">Sign in</button>
    <div class="form-group">
        <p></p>
        <label>Not here yet?</label>
        <a class="register-form" asp-controller="Account" asp-action="DisplayRegister">
            Register
        </a>
    </div>
    <p class="mt-5 mb-3 text-muted text-center">© 2017-2020</p>
</form>



@section scripts{

    <partial name="_ValidationScriptsPartial" />

}












